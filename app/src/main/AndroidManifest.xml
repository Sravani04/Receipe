<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viralandroid.receipe">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".ProductsActivity"></activity>
        <activity android:name=".RecipeFragment"></activity>
        <activity android:name=".CartFragment"></activity>
        <activity android:name=".ExampleMainActivity"></activity>
        <activity android:name=".YoutubePlayer"></activity>
        <activity android:name=".LanguageScreen"></activity>
    </application>

</manifest>

