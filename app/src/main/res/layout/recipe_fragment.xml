<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/header">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:id="@+id/back_btn"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/back_arrow" />

                    <TextView
                        android:text="Fruit recipes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView9"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#ffa500"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:textStyle="normal|bold" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/recipe_cart"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/cart_icon" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:id="@+id/recipes">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/recipe_image"
                            android:src="@drawable/tab_bar_summary2" />

                        <TextView
                            android:text="Recipes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/recipe_title"
                            android:layout_marginLeft="5dp"
                            android:paddingRight="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:id="@+id/ingrediants">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/ingrediants_image"
                            android:src="@drawable/tab_bar_ingredients_active" />

                        <TextView
                            android:text="Ingredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ingrediants_title"
                            android:textColor="#ffa500"
                            android:gravity="center_horizontal" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:id="@+id/methods">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:id="@+id/methods_image"
                            android:src="@drawable/tab_bar_recipe" />

                        <TextView
                            android:text="Method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/methods_title"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header"
            android:background="#b2b2b2"
            android:id="@+id/line"
            android:layout_marginBottom="5dp"></LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line"
            android:layout_above="@+id/footer"
            android:id="@+id/recipe_frame"
            android:layout_marginBottom="3dp">

        </FrameLayout>

    </RelativeLayout>


</LinearLayout>