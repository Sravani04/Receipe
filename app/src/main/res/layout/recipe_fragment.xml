<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/header">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/back_btn"
                        android:adjustViewBounds="true"
                        android:src="@drawable/back_arrow"
                        android:tint="#f2ea2f"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:text="Fruit recipes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/category_title"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#f2ea2f"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:textStyle="normal|bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/recipe_cart"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/cart_icon"
                        android:tint="#f2ea2f"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_vertical"
                        android:padding="14dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            android:background="#d3d3d3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:id="@+id/recipes">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:id="@+id/recipe_image"
                            android:src="@drawable/ingredients2x3"
                            android:adjustViewBounds="true" />

                        <TextView
                            android:text="Recipes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/recipe_title"
                            android:layout_marginLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColor="#ffa500" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:id="@+id/ingrediants"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/ingrediants_image"
                            android:src="@drawable/tab_bar_ingredients2x1"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:text="Ingredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ingrediants_title"
                            android:gravity="center_horizontal" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:id="@+id/methods">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/methods_image"
                            android:src="@drawable/tab_bar_recipe"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:text="Method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/methods_title"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header"
            android:background="#b2b2b2"
            android:id="@+id/line"></LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/line"
            android:id="@+id/banner">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_image"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/hasselback_potatoes01" />
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/banner"
        android:id="@+id/body_header">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7f7f7f">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/product_title"
                    android:text="Squash, sage and chestnut rolls         "
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_video"
                    android:background="#333333"
                    android:src="@drawable/video_play"
                    android:layout_width="55dp"
                    android:padding="12dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_like"
                    android:background="#333333"
                    android:src="@drawable/fav"
                    android:layout_width="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:id="@+id/recipe_share"
                    android:background="#333333"
                    android:src="@drawable/share_icon"
                    android:padding="14dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/body_header"
        android:id="@+id/recipe_body">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:layout_width="90dp"
                    android:src="@drawable/gluten_black3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_gluten"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Free"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cook_black"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:text="60 mins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_ct"
                    android:textColor="#000"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cook_black"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:text="x6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_portions"
                    android:textColor="#000"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:src="@drawable/calorires_black"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:text="192"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_calories"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:background="#d3d3d3"
            android:id="@+id/recipe_line"
            android:layout_above="@+id/recipe_frame"
            android:layout_below="@+id/recipe_body"
            android:layout_height="1dp"></LinearLayout>
    </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recipe_frame"
            android:layout_marginBottom="7dp"
            android:layout_below="@+id/recipe_body"
            android:layout_marginTop="5dp"
            android:layout_above="@+id/footer">

        </FrameLayout>




    </RelativeLayout>


</LinearLayout>