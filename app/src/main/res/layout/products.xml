<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_item">

            <ImageView
                android:layout_width="230dp"
                android:id="@+id/product_image"
                android:layout_weight="1"
                android:layout_height="220dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gennaros_pasta01" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:addStatesFromChildren="false"
            android:layout_alignBottom="@+id/product_item"
            android:background="#64424242">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="Squash, sage and chestnut rolls"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/product_title"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|end"
                    android:gravity="right"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="right|center_horizontal|end"
                        android:layout_gravity="right|end"
                        android:foregroundGravity="right">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageView5"
                            android:tint="#ffffff"
                            android:adjustViewBounds="true"
                            android:src="@drawable/cook"
                            android:layout_marginTop="7dp" />

                        <TextView
                            android:text="60 mins"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/product_time"
                            android:gravity="center_vertical"
                            android:textColor="#ffffff"
                            android:textSize="17sp"
                            android:layout_marginLeft="2dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>